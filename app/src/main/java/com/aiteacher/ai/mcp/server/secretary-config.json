{
  "servers": [
    {
      "id": "knowledge_base_server",
      "name": "知识库检索服务器",
      "description": "提供教学大纲和知识点检索功能",
      "tools": [
        {
          "name": "knowledge_base",
          "description": "检索教学大纲和知识点信息",
          "parameters": {
            "type": {
              "type": "string",
              "description": "检索类型：syllabus(教学大纲)、knowledge_point(知识点)、chapter(章节)",
              "enum": ["syllabus", "knowledge_point", "chapter"]
            },
            "grade": {
              "type": "integer",
              "description": "年级：7(初一)、8(初二)、9(初三)",
              "minimum": 7,
              "maximum": 9
            },
            "subject": {
              "type": "string",
              "description": "学科，默认为数学",
              "default": "数学"
            },
            "keyword": {
              "type": "string",
              "description": "搜索关键词，可选"
            }
          }
        }
      ]
    }
  ]
}
